<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Background color of the EditText -->

    <!-- Outline (circle effect) -->
    <stroke
        android:width="2dp"
        android:color="@color/white" /> <!-- Border color of the circle -->

    <!-- Rounded corners -->
    <corners android:radius="20dp" /> <!-- Adjust the radius to control the roundness -->

    <!-- Padding inside the EditText -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>
