<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Border color and thickness -->
    <stroke
        android:width="2dp"
        android:color="#F0F0F0" /> <!-- A lighter white shade compared to your theme -->

    <!-- Background color -->
    <solid android:color="#FFFFFF" /> <!-- A light white color -->

    <!-- Optional padding inside the border -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
