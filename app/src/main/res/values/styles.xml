<?xml version="1.0" encoding="utf-8"?>
<resources>




    <style name="ToolbarThemeWhite" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item> <!-- This affects icon color -->
    </style>

    <style name="FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Theme.MermentV1.FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Launch Theme for SplashActivity -->
    <style name="Theme.MermentV1.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/mainsplash</item>
    </style>
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_merent_corner_10</item>
        <item name="android:stateListAnimator">@null</item> <!-- Removes elevation animation -->
        <item name="android:elevation">0dp</item> <!-- Removes shadow -->
    </style>



</resources>